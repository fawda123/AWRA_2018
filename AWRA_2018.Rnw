  geom_point(data = reststat, aes(x = lon, y = lat), size = 4, pch = 21, fill = 'grey', alpha = 0.8) +
geom_point(data = wqstat, aes(x = lon, y = lat), size = 3, pch = 16, color = 'black', alpha = 0.8)

