    ) %>% 
  mutate(
    hab = factor(hab, levels = c('hab_bef', 'hab_aft'), labels = c('Before', 'After')),
    wtr = factor(wtr, levels = c('wtr_bef', 'wtr_aft'), labels = c('Before', 'After'))
  )

